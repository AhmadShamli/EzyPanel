# Application Settings
FLASK_APP=ezypanel
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
# Format: sqlite:///path/to/db.sqlite or postgresql://user:password@localhost/dbname
DATABASE_URI=sqlite:///data/panel.db

# Web Server User/Group - should match your web server user (www-data, nginx, etc.)
WEB_USER=www-data
WEB_GROUP=www-data

# Path Configuration
# These paths are relative to the project root unless absolute paths are provided
DOCUMENT_ROOT_BASE=./data/var/www
NGINX_AVAILABLE_DIR=./data/nginx/sites-available
NGINX_ENABLED_DIR=./data/nginx/sites-enabled
PHP_FPM_BASE_DIR=./data/php-fpm
PHP_SOCKET_BASE_DIR=./data/run/php

# Template Paths
NGINX_TEMPLATE=./config_templates/nginx.conf.tpl
PHP_FPM_TEMPLATE=./config_templates/php-fpm.conf.tpl

# Binary Paths - update these according to your system
NGINX_BIN=nginx
SYSTEMCTL_BIN=systemctl

# PHP Configuration
# Template for PHP binary path (e.g., /usr/bin/php8.2)
PHP_BIN_TEMPLATE=php{version}
# Template for PHP-FPM service name (e.g., php8.2-fpm)
PHP_FPM_SERVICE_TEMPLATE=php{version}-fpm
# Comma-separated list of available PHP versions (e.g., "8.2,8.1,7.4")
# If not set, will be auto-detected from PHP_FPM_BASE_DIR
# PHP_VERSIONS=8.2,8.1,7.4

# Development Settings
# Set to "false" in production to execute actual system commands
SIMULATE_SERVER_COMMANDS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/ezypanel.log

# Session Configuration
# 30 days in seconds
PERMANENT_SESSION_LIFETIME=2592000
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true

# Security
# Maximum file upload size in bytes (default: 50MB)
MAX_CONTENT_LENGTH=52428800

# CORS Settings (if API access is needed)
# CORS_ORIGINS=https://yourdomain.com,http://localhost:3000
